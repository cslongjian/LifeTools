<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="12dp">
    <TextView
        android:id="@+id/title_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/T1"
        tools:text="标题"/>
    <TextView
        android:id="@+id/message_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_view"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/T2"
        tools:text="消息"/>

    <View
        android:id="@+id/line_view"
        app:layout_constraintTop_toBottomOf="@id/message_view"
        android:layout_marginTop="28dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>

    <TextView
        android:id="@+id/negative_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/divider_view"
        app:layout_constraintTop_toBottomOf="@id/line_view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="@color/T2"
        android:gravity="center"
        tools:text="关闭"/>

    <View
        android:id="@+id/divider_view"
        app:layout_constraintTop_toBottomOf="@id/line_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/negative_button"
        app:layout_constraintRight_toLeftOf="@id/positive_button"
        android:layout_width="1px"
        android:layout_height="50dp"
        android:background="@color/line"/>

    <TextView
        android:id="@+id/positive_button"
        app:layout_constraintTop_toBottomOf="@id/line_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/divider_view"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/gold"
        android:gravity="center"
        tools:text="确定"/>

    <TextView
        android:id="@+id/single_button"
        app:layout_constraintTop_toBottomOf="@id/line_view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/gold"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="关闭"/>
</android.support.constraint.ConstraintLayout>